  "paths": {
    "/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Service to register a new user",
        "description": "Service to register a new user for the menu API",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "user Signin information",
            "schema": {
              "$ref": "#/definitions/AddUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Registration is succesfull",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Successfully added! You can now connect to your account"
                },
                "Informations": {
                  "type": "object",
                  "properties": {
                    "datas": {
                      "type": "string",
                      "example": "object with user information formatted"
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "403": {
            "description": "Registration is impossible",
            "schema": {
              "type": "object",
              "properties": {
                "message1": {
                  "type": "string",
                  "example": "Invalid or insufficient data for registration"
                },
                "message2": {
                  "type": "string",
                  "example": "User allready exist"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Server Error",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Internal server error"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Service to login a user to the app",
        "description": "Service to login",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "user login information",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login sucess",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Successfully connected!"
                },
                "jwt": {
                  "type": "string",
                  "example": "A very long token"
                },
                "refresh_jwt": {
                  "type": "string",
                  "example": "An other long token"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Login fail",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "User or password incorrect"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Server Error",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Internal server error"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/me": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Service to know if user is an administrator",
        "description": "Please put the bearer token on the top of the request, not on the authorization input field",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Token is valid",
            "schema": {
              "type": "object",
              "properties": {
                " ": {
                  "type": "string",
                  "example": "Hey friend! you're not an admin but you can do some request ;-)"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Your rights are revoked."
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
